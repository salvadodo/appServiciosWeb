@model servicioWebNegocios.Casas
@{
    ViewBag.Title = "Actualizar";
}

<h2>Actualizar Casa</h2>

<form method="post" action="@Url.Action("Actualizar", "Casas")">
    <div class="form-group">
        <label>Tipo de Casa</label>
        @Html.TextBoxFor(x => x.tipodeCasa, new { @class = "form-control" })
        @*@Html.TextBoxFor(x => x.tipodeCasa, new { @class = "form-control", @readonly = "readonly" })*@
    </div>
    <div class="form-group">
        <label>Ubicación</label>
        @Html.TextBoxFor(x => x.Ubicacion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Descripción</label>
        @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Dueño</label>
        @Html.TextBoxFor(x => x.Dueño, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Actualizar" />
        <a href="@Url.Action("Index", "Casas")">Regresar</a>
    </div>
</form>

